<!doctype html>
<h1>Create a Team and Heroes!</h1>
<form method="post" action="/teams">
  <label for="team_name">Team Name: </label>
  <input type="text" id="team_name" name="team[name]">
  <label for="team_motto">Team Motto: </label>
  <input type="text" id="team_motto" name="team[motto]">
</form>
<h2>Hero 1</h2>
<form method="post" action="/teams">
  <label for="hero_1_name">Hero's Name: </label>
  <input type="text" id="hero_1_name" name="team[heroes][][name]">
  <label for="hero_1_power">Hero's Power: </label>
  <input type="text" id="hero_1_power" name="team[heroes][][power]">
  <label for="hero_1_bio">Hero's Power: </label>
  <input type="text" id="hero_1_bio" name="team[heroes][][bio]">
</form>
